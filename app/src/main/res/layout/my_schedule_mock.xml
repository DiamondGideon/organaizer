            style="@style/CalendarDayTitle"
            android:id="@+id/pair3"
            android:text="Pair 3\n"
            android:background="@drawable/square_boards_green"/>
        <TextView
            style="@style/CalendarDayTitle"
            android:id="@+id/time3"
            android:text="12:20 - 13:55\n"
            android:background="@drawable/square_boards_green"/>
        <TextView
            style="@style/CalendarDayTitle"
            android:id="@+id/name3"
            android:text="English\n"
            android:layout_width="141dp"
            android:background="@drawable/square_boards_green"/>
    </LinearLayout>
</LinearLayout>

